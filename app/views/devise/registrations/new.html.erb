
<div class="row">
  <div class="col-xs-3 col-xs-offset-2 col-md-6 col-md-offset-5">
      <h2 class="title">Регистрация</h2>
  </div> 
  <div class="col-md-8 col-md-offset-3">
      <h4 style="color:#3c3e50;">Для для продолжения работы с нашим сервисом вам необходимо зарегистрироваться</h4><br>
  </div>
          
  
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          
  <div class="col-md-10 col-md-offset-1 content">
         <div class="col-md-8 col-md-offset-2">
                <%= devise_error_messages! %><br>  
                <ul class="nav nav-tabs">
                    <li class="active"><a data-toggle="tab" href="#panel1">Шаг 1.Основная информация</a></li>
                    <li><a data-toggle="tab" href="#panel2">Шаг 2.Доп.информация</a></li>
                </ul>
                <div class="tab-content">
                    <div id="panel1" class="tab-pane fade in active">
                        <div class="form-group">
                             <%= f.text_field :company_name, :placeholder => "Название организации", autofocus: true, class:"form-control" %>
                        </div>
                          
                        <div class="form-group">
                               <%= f.email_field :email, :placeholder => "Эл.адрес", autofocus: true, class:"form-control" %>
                        </div>
                        
                         <div class="form-group">
                             <%= f.password_field :password, :placeholder => 'Пароль', class:"form-control form-control-tag" %>
                        </div>

                        <div class="form-group">
                           <%= f.password_field :password_confirmation, :placeholder => "Подтверждение пароля", autocomplete: "on", class:"form-control" %>
                        </div><br>
                        
                       
                        
                     
                    </div>
                    <div id="panel2" class="tab-pane fade"><br>
                        <div class="form-group">
                            <h4>Выберите сферу вашей деятельности:</h4>
                            <%= f.collection_select :category_id, Category.order(:name), :id, :name, {prompt: "Выберите категорию"} , {class: "form-control", id:"tab_2"} %>
                        </div>

                        <div class="form-group">
                            <h4>Номер телефона:</h4>
                            <%= f.text_field :phone_number, class:"form-control", id:"tab_2" %>
                        </div>
                        <div class="form-group">
                            <h4>Опишите вашу деятельность:</h4>
                            <%= f.text_area :description, autofocus: true, size: "30x5", class:"form-control", id:"tab_2" %>
                        </div>
                        <div class="form-group">
                           <h4>Загрузите изображение для личного профиля:</h4>
                           <%= f.file_field :image  %>
                        </div> 
                      </div>
                    </div>

           <div class="col-md-offset-4">
              <%= f.submit "Зарегистрироваться", class: "submit-button" %>
          </div>
      <% end %>
   
      <%= render "devise/shared/links" %>
       </div>
    </div>
</div>



