<% unless user == current_user %>
  <% if current_user.following?(user) %>
    <%= button_to("Отписаться от #{user.company_name}", user_follow_path(user.to_param, current_user.get_follow(user).id), :method => :delete, class:"button" , :remote => true) %>
  <% else %>
    <%= button_to("Подписаться на  #{user.company_name}", user_follows_path(user.to_param),class: "button" , :remote => true) %>
  <% end %>
<% end %>